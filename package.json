{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "start": "run-p -l start:*",
        "start:migration": "dotnet run --project server/src/Server.Main.AppDbMigration",
        "start:api": "dotnet run --project server/src/Server.Main.WebApi",
        "start:web": "yarn workspace @front/main dev",
        "lint": "rome check .",
        "format": "rome format --write .",
        "test": "vitest",
        "add-migration": "dotnet ef migrations add --project server/src/Server.Main.AppDbMigration",
        "deploy": "run-s deploy:*",
        "deploy:migration": "dotnet publish server/src/Server.Main.AppDbMigration --configuration Release --output dist/migration/published --no-self-contained",
        "deploy:api": "dotnet publish server/src/Server.Main.WebApi --configuration Release --output dist/webapp/published --no-self-contained",
        "deploy:web": "yarn workspace @front/main build --outDir ../../dist/webapp/published/wwwroot",
        "deploy:cdk": "yarn workspace @infra-aws/main cdk deploy --all --require-approval never",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/react": "^18.0.25",
        "@types/react-dom": "^18.0.8",
        "@types/testing-library__user-event": "^4.2.0",
        "@vitejs/plugin-react": "^3.0.1",
        "@vitest/coverage-c8": "^0.28.2",
        "c8": "^7.12.0",
        "husky": ">=8.0.2",
        "jest-extended": "^3.1.0",
        "jsdom": "^21.1.0",
        "lint-staged": "^13.0.3",
        "npm-run-all": "^4.1.5",
        "rome": "^11.0.0",
        "swagger-typescript-api": "^12.0.2",
        "typescript": "^4.8.4",
        "vite": "^4.0.4",
        "vite-tsconfig-paths": "^4.0.5",
        "vitest": "^0.28.2",
        "vitest-sonar-reporter": "^0.3.3"
    }
}
