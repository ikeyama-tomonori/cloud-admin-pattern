{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "start": "run-p -l start:*",
        "start:migration": "dotnet run --project packages/Server.Main.AppDbMigration",
        "start:api": "dotnet run --project packages/Server.Main.WebApi",
        "start:web": "yarn workspace @front/main dev",
        "lint": "eslint --ext .tsx,.ts packages/",
        "format": "prettier --write \"**/*.+(ts|tsx)\"",
        "test": "vitest",
        "add-migration": "dotnet ef migrations add --project packages/Server.Main.AppDbMigration",
        "deploy": "run-s deploy:*",
        "deploy:migration": "dotnet publish packages/Server.Main.AppDbMigration --configuration Release --output dist/migration/published --no-self-contained",
        "deploy:api": "dotnet publish packages/Server.Main.WebApi --configuration Release --output dist/webapp/published --no-self-contained",
        "deploy:web": "yarn workspace @front/main build --outDir ../../dist/webapp/published/wwwroot",
        "deploy:cdk": "yarn workspace @infra-aws/main cdk deploy --all --require-approval never",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.3.0",
        "@testing-library/user-event": "^14.2.1",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "@types/testing-library__user-event": "^4.2.0",
        "@typescript-eslint/eslint-plugin": "^5.29.0",
        "@typescript-eslint/parser": "^5.29.0",
        "@vitejs/plugin-react": "^1.3.0",
        "c8": "^7.11.3",
        "eslint": "^8.0.1",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest-dom": "^4.0.2",
        "eslint-plugin-jsx-a11y": "^6.6.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react": "^7.30.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-testing-library": "^5.5.1",
        "husky": ">=6",
        "jest-extended": "^2.0.0",
        "jsdom": "^20.0.0",
        "lint-staged": "^13.0.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.7.1",
        "swagger-typescript-api": "^9.3.1",
        "typescript": "^4.7.4",
        "vite": "^2.9.9",
        "vite-tsconfig-paths": "^3.5.0",
        "vitest": "^0.16.0",
        "vitest-sonar-reporter": "^0.2.1"
    }
}
